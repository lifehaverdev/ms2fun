{
  "name": "cult-execs-terminal",
  "version": "1.0.0",
  "description": "CULT EXECS Terminal Interface",
  "main": "server.js",
  "scripts": {
    "start": "vite preview",
    "dev": "vite",
    "build": "vite build",
    "server:legacy": "nodemon server.js",
    "setup:local": "bash scripts/local-chain/setup.sh",
    "chain:start": "bash scripts/local-chain/start-chain.sh",
    "chain:reset": "npm run chain:start",
    "chain:verify": "node scripts/verify-seed-data.mjs",
    "contracts:build": "cd contracts && forge build",
    "contracts:update": "git submodule update --remote contracts && npm run contracts:build"
  },
  "dependencies": {
    "@monygroupcorp/micro-web3": "^1.3.9",
    "@monygroupcorp/microact": "^0.2.1",
    "ethers": "^5.7.2",
    "express": "^4.17.1",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "vite": "^7.3.1"
  }
}
